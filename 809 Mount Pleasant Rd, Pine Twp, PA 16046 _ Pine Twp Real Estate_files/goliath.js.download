function unPopLight() {
    $('a.closePopUp,.PPRCaptcha,#fade,.popupEmailFriend,.popupShowing,.ContactTeamFade,#CareProgram,#sherlock-login, .popup_block, #Sherlock-Timer, #Sherlock-HouseTimer, #Sherlock-Congrats, #save-this-search').fadeOut(function() {});
}

