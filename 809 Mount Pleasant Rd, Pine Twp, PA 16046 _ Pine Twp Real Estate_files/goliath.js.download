}

$("#cmdCaptchaCheck").click(function(){
    // Show loading state
    $(this).prop('disabled', true).text('Verifying...');
    
    // Run reCAPTCHA verification
    RecaptchaManager.verifyForFormToggle($(this));
});

$("a.GoliathLight[href^='#']").click(function(){
    var e=$(this).attr("rel");
    var closeimage = '<img src="https://www.thepreferredrealty.com/assets/images/close_pop.png" class="btn_close" title="Close" alt="Close" />';
    
    $("#"+e).fadeIn().prepend('<a onclick="unPopLight();" class="closePopUp">' + closeimage +'</a>');
    
    return $("body").append('<div id="fade" onclick="unPopLight();"></div>'),
           $("#fade").css({filter:"alpha(opacity=80)"}).fadeIn(),
           !1;
});